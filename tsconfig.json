{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "es6",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
